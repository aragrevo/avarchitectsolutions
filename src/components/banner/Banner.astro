---
import Container from '@components/Container.astro';
---

<section
  style="background: linear-gradient(to right, rgb(0 0 0 /.6), rgb(0 0 0 /0)),url('/images/office-building.webp') no-repeat; background-position: bottom; background-size: cover; background-blend-mode: multiply;"
  id='banner'
  class='overflow-hidden w-full relative'
>
  <Container>
    <div class='flex flex-col py-36 z-10'>
      <h1 class='font-semibold text-5xl sm:text-6xl mb-5 text-white max-w-2xl'>
        Andrés Vásquez <span class='font-normal'>Architect Solutions</span>
      </h1>
      <p class='text-semibold text-xl text-white'>Un mundo de soluciones prácticas y rápidas</p>
    </div>
  </Container>
</section>
