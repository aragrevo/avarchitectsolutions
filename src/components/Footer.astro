        </div>
        <a
          class='text-sm font-normal text-slate-100 underline underline-offset-2'
          href='mailto:avarchitectsolutions@outlook.com'>avarchitectsolutions@outlook.com</a
        >
      </section>
    </div>

    <!-- // {name === NetworksEnum.linkedin && <Linkedin />}
