---
import ButtonShare from './ButtonShare.astro';
import Container from './Container.astro';

// const NetworksEnum = {
//   linkedin: 'F',
//   github: 'Github',
//   instagram: 'Instagram',
//   twitter: 'Twitter',
//   share: 'Share',
// };

const socialNetworks = [
  {
    name: 'Facebook',
    href: 'https://www.linkedin.com/in/aragrevo/',
    color: '#2C3456',
  },
  {
    name: 'Twitter',
    href: 'https://github.com/aragrevo',
    color: '#CC296C',
  },
];
---

<footer class='bg-black'>
  <Container>
    <div class='grid grid-cols-12 text-white py-20'>
      <section class='col-start-2 col-span-6'>
        <h3 class='text-2xl'>Contrata los mejores</h3>
        <form class='appearance-none w-full flex flex-col py-4'>
          <div class='flex gap-2 mb-4'>
            <div class='flex-1'>
              <label for='name' class='block mb-2 text-sm font-normal text-slate-100'>Nombre</label>
              <input
                type='text'
                id='name'
                class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
                placeholder=''
                required
              />
            </div>
            <div class='flex-1'>
              <label for='email' class='block mb-2 text-sm font-normal text-slate-100'>Correo</label>
              <input
                type='email'
                id='email'
                class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
                placeholder='name@outlook.com'
                required
              />
            </div>
          </div>
          <div class='w-full'>
            <label for='subject' class='block mb-2 text-sm font-normal text-slate-100'>Asunto</label>
            <textarea
              class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
              name='subject'
              id='subject'
              rows='4'></textarea>
          </div>
        </form>
        <button
          class='inline-block px-6 pt-2.5 pb-2 rounded-lg bg-indigo-900 font-medium text-base shadow transition duration-150 ease-in-out hover:bg-primary-600 hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:bg-primary-600 focus:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:outline-none focus:ring-0 active:bg-primary-700 active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)]'
          >Enviar</button
        >
      </section>
      <section class='col-start-9 col-span-3 flex items-end justify-end flex-col gap-2'>
        <div class='flex gap-4'>
          <!-- {
            socialNetworks.map(({name, href}) => (
              <a href={href} target='_blank' class={`text-slate-400 transition-all hover:text-[#2C3456]`}>
                <span class='sr-only'>{name} page</span>
                
              </a>
